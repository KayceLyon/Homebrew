<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <title>New Spell</title>
</head>
<body>
    <%- include('partials/nav.ejs') %>
    <div class="grid-container">
                    <h1><%=spell.name%></h1><hr>
                <div class="grid-x align-right">
                    <div class="cell small-1 medium-1 large-1">
                    <a href="/spells/<%=spell.id%>/edit">
                        <button class="button">Edit</button>
                    </a>
                </div>
                <div class="cell small-1 medium-1 large-1">
                    <form action="/spells/<%=spell.id%>?_method=DELETE" method="POST">
                        <button class="button" type="submit" value="Delete">Delete</button>
                    </form>
                    </div>
                    </div>
                    <div class="grid-x grid-margin-x">
                        <div class="cell small-3 medium-3 large-3">
                            <p>Level: <%=spell.level%></p>
                        </div>
                        <div class="cell small-3 medium-3 large-3">
                            <p>School of Magic: <%=spell.school%></p>
                        </div>
                        <div class="cell small-3 medium-3 large-3">
                            <p>Casting Time: <%=spell.castingTime%> <%=spell.castingType%></p>
                        </div>
                        <div class="cell small-3 medium-3 large-3">
                            <p>Ritual: <%=spell.ritual%></p>
                        </div>
            </div>
          </div>
        <%- include('partials/script.ejs') %>
    </body>
</html>