<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <title>Spell Information</title>
</head>
<body>
    <%- include('partials/nav.ejs') %> 
    <div class="container" >
        <h1><%=spell.name%></h1>
            <p><%=spell.school%></p>
            <p><%=spell.level%></p>
            <p><%=spell.time%></p>
            <a href="/spells/<%=spell.id%>/edit">
                <button class="edit">Edit</button>
            </a>
            <form action="/spells/<%=spell.id%>?_method=DELETE" method="POST">
                <input class="delete" type="submit" value="Delete">
            </form>
    </div>
    <%- include('partials/script.ejs') %>
</body>
</html>